{
    "presets": [
        [
            "@babel/preset-env",
            {
                "loose": true,
                "modules": false,
                "targets": "> 1%, not dead"
            }
        ],
        "@babel/preset-react"
    ],
    "plugins": [
        "./build-tool/babel-plugins.js",
        "react-hot-loader/babel",
        "@babel/plugin-syntax-dynamic-import",
        [
            "@babel/plugin-proposal-decorators",
            {
                "legacy": true
            }
        ],
        [
            "@babel/plugin-proposal-class-properties",
            {
                "loose": true
            }
        ],
        [
            "@babel/plugin-transform-runtime",
            {
                "corejs": 3,
                "useESModules": true
            }
        ]
    ]
}
